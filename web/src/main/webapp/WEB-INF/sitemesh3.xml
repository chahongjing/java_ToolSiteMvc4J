<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
    <mapping path="/*" decorator="/WEB-INF/layout/defaultLayout.jsp" />

    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/exclude.jsp*" exclue="true" />
    <mapping path="/userinfo/loginpage*" exclue="true" />

   <content-processor>
       <tag-rule-bundle class="com.zjy.bll.common.MyTagRuleBundle" />
   </content-processor>
</sitemesh>